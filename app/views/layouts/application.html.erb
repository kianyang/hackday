<!DOCTYPE html>
<html>
  <head>
    <title>Reaio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="">
    <div class="wrapper ">
      <%= render 'layouts/vendor/sidebar' %>
      <div class="main-panel">
        <%= render 'layouts/shared/navigation_bar' %>
        <div class="content">
          <div class="container-fluid">
            <% flash.each do |key, value| %>
              <div class="<%= flash_class(key) %>" role="alert">
                    <%= value %>
              </div>
            <% end %>
            <%= yield %>
          </div> <!-- container fluid -->
        </div>
        <%= render 'layouts/shared/footer' %>
      </div>
    </div>

    <script>
      $(document).ready(function() {
        // Javascript method's body can be found in assets/js/demos.js
        md.initDashboardPageCharts();
      });
    </script>
  </body>
</html>
