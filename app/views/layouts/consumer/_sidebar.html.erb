<div class="sidebar" data-color="green" data-background-color="white" data-image="<%= asset_path('sidebar-1.jpg')%>">
      <div class="logo">
        <a href="/" class="simple-text logo-normal">
          PayCeipt
        </a>
      </div>
      <div class="sidebar-wrapper">
        <ul class="nav">
          <li class="nav-item <%= active_class(dashboard_path) %>">
            <a class="nav-link" href="<%= dashboard_path %>">
              <i class="material-icons">dashboard</i>
              <p>Dashboard</p>
            </a>
          </li>
          <li class="nav-item <%= active_class(receipts_path) %>">
            <a class="nav-link" href="<%= receipts_path %>">
              <i class="material-icons">receipt</i>
