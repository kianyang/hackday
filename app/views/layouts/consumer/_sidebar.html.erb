            </a>
          </li>
          <li class="nav-item <%= active_class(edit_profile_path) %>">
            <a class="nav-link" href="<%= edit_profile_path %>">
              <i class="material-icons">person</i>
              <p>Profile</p>
            </a>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
              <i class="material-icons">exit_to_app</i>
              <p>Logout</p>
            <% end %>
