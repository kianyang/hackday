<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header card-header-primary">
        <h4 class="card-title ">Menu</h4>
        <p class="card-category"> Here is a subtitle for this table</p>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead class=" text-primary">
              <th>
                Name
              </th>
              <th>
                Price
              </th>
              <th>
                
              </th>
            </thead>
            <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td>
                    <%= product.name %>
                  </td>
                  <td class="text-primary">
                    <%= number_to_currency(product.price) %>
                  </td>
                  <td>
                    <%= link_to "Add To Cart", add_to_cart_invoice_path(product_id: product.id), class: "btn btn-primary pull-right" %>
                    <!-- <button type="button" class=""></button>-->
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card">
      <div class="card-header card-header-primary">
        <h4 class="card-title ">Order No <%= @invoice.id %></h4>
        <p class="card-category"> Here is a subtitle for this table</p>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead class=" text-primary">
              <th>
                Name
              </th>
              <th>
                Price
              </th>
            </thead>
            <tbody>
              <% @invoice.line_items.each do |line_item| %>
                <tr>
                  <td>
                    <%= line_item.description %>
                  </td>
                  <td class="text-primary">
                    <%= number_to_currency(line_item.price) %>
                  </td>
                </tr>
              <% end %>
              <tr>
                <td>Total</td>
                <td class="text-primary"><%= number_to_currency(@invoice.line_items.sum(:price)) %></td>
              </tr>
            </tbody>
          </table>
          </div>

          <%= link_to "Close Sale", invoice_path(@invoice), class: "btn btn-primary pull-right" %>
      </div>
    </div>
  </div>

</div>